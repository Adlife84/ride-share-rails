<!DOCTYPE html>
<html>
  <head>
    <title>Admin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="main-body">
    <div class="container" id="welcome">
      <h1 class="app-name">Rideshare</h1>

      <div class="login-menu">
          <%= link_to "Login as Admin", new_user_session_path, :class => 'btn btn-sm btn-success', id: "admin-login" %>
          <%= link_to "Login as Rider", new_rider_session_path, :class => 'btn btn-sm btn-success', id: "rider-login" %>
      </div>

    </div>
  </body>
</html>
