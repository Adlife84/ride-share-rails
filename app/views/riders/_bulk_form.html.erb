<div class="container">

  <div class="card">
    <h5 class="card-header shadow bg-primary info-color  text-center ">
      <strong class="text-white">Manage Tokens</strong>
    </h5>
    <div class="parent">
        <div class="left">
            <div class="form-group offset-md-1 col-md-5 ">
                <p><b>Rider: </b><%= @rider.full_name %></p><br/>
                <p><b>Valid Tokens: </b><%= @rider.valid_tokens_count %>
            </div>
        </div>
        <div class="right">
            <%= form_tag bulk_update_riders_path do %>
                <%= hidden_field_tag 'rider_id', params[:id] %>
                <div class="form-group offset-md-1 col-md-5 ">
                  <b><%= label_tag 'Quantity' %></b><br>
                    <%= number_field_tag 'quantity', nil, min: 1, class: "form-control" %>
                </div>

                <div  class="form-group col-md-1 offset-md-1">
                    <div class="row2">
                        <div class="add"><%= submit_tag "Add", class: "btn btn-sm btn-outline-success my-2 my-sm-0" %></div>
                        <div class="remove"><%= submit_tag "Remove", class: "btn btn-sm btn-outline-success my-2 my-sm-0" %></div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>

  </div>
</div>