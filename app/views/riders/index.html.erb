<div class="container">

<h1>Riders</h1>
<%= paginate @riders %>

<table class="table table-striped">
  <tr>
    <th scope="col">First name</th>
    <th scope="col">Last name</th>
    <th scope="col">Phone</th>
    <th scope="col">Email</th>
    <th scope="col"></th>
    <th scope="col"></th>
    <th scope="col"></th>
  </tr>

  <% @riders.each do |rider| %>
      <tr>
        <td><%= rider.first_name %></td>
        <td><%= rider.last_name %></td>
        <td><%= rider.phone %></td>
        <td><%= rider.email %></td>
        <td><%= link_to 'Show', rider_path(rider) %></td>
        <td><%= link_to 'Edit', edit_rider_path(rider) %></td>
        <td><%= link_to 'Delete', rider_path(rider),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

<%= paginate @riders %>
<%= link_to 'Back', welcome_index_path %> |
<%= link_to 'New Rider', new_rider_path %>

