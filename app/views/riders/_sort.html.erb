<div class="container">

<h1 style="text-align:center">List of All Riders</h1>
<%= paginate @riders %>

<table class="table table-striped">
  <tr class="border-bot">
    <th scope="col">First name</th>
    <th scope="col" class="rowBox">Last name <span id="flex-box"><%= link_to riders_path, class: "links" do %>
                                                       <%= fa_icon "sort-up" %>
                                                     <% end %>
                                                     <%= link_to sort_down_path, class: "links" do %>
                                                       <%= fa_icon "sort-down"%>
                                                     <% end %></span></th>
    <th scope="col">Phone</th>
    <th scope="col">Email</th>
    <th scope="col"></th>
    <th scope="col"></th>
  </tr>

  <% @riders.each do |rider| %>
      <tr>
        <td><%= rider.first_name %></td>
        <td><%= rider.last_name %></td>
        <td><%= rider.phone %></td>
        <td><%= rider.email %></td>
        <td><%= link_to 'Edit', edit_rider_path(rider) %></td>
        <td><%= link_to 'Deactivate', rider_deactivate_path(rider),
                          method: :put,
                          data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>

<%= paginate @riders %>
<%= link_to 'Back', welcome_index_path, class: "btn btn-outline-primary my-2 my-sm-0" %>
<%= link_to 'New Rider', new_rider_path, class: "btn btn-outline-info my-2 my-sm-0" %>

