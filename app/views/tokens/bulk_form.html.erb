<%= form_tag bulk_update_tokens_path do %>
    <%= hidden_field_tag 'rider_id', params[:rider_id] %>
     <div class="row">
        <div class="form-group offset-md-1 col-md-5 ">
          <b><%= label_tag 'Quantity' %></b><br>
              <%= number_field_tag :quantity, min: 1, class: "form-control" %>
        </div>

        <div  class="form-group col-md-1 offset-md-7">
          <%= submit_tag "Add", class:"btn btn-primary" %>
          <%= submit_tag "Remove", class:"btn btn-primary" %>
        </div>
    </div>

<% end %>