<%= form_with(model: @token, local: true) do |form| %>


  <% if @token.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@token.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @token.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group offset-md-1 col-md-5">
      <%= form.hidden_field :rider_id %>
    </div>
  </div>

  <div class="row">
    <div class="form-group offset-md-1 col-md-5 ">
      <b><%= form.label :quantity %></b><br>
      <%= form.number_field :quantity, min: 1, class: "form-control" %>
    </div>
    <div  class="form-group col-md-1 offset-md-7">
      <%= form.submit "Give", class:"btn btn-primary" %>
    </div>
  </div>


<% end %>