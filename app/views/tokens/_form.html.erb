<%= form_with(model: @token, local: true) do |form| %>


  <% if @token.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@token.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @token.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group offset-md-1 col-md-5 ">
      <%= form.label :rider_id %><br>
      <%= form.text_field :rider_id,class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group offset-md-1 col-md-5 ">
      <%= form.label :quantity %><br>
      <%= form.number_field :quantity, min: 1, max: 10, class: "form-control" %>
    </div>

    <% if false %>
      <div class="form-group offset-md-1 col-md-5 ">
        <%= form.label :created_at %><br>
        <%= form.text_field :created_at,class: "form-control" %>
      </div>

      <div class="form-group offset-md-1 col-md-5 ">
        <%= form.label :expires_at %><br>
        <%= form.text_field :expires_at,class: "form-control" %>
      </div>

      <div class="form-group offset-md-1 col-md-5 ">
        <%= form.label :used_at %><br>
        <%= form.text_field :used_at,class: "form-control" %>
      </div>

      <div class="form-group offset-md-1 col-md-5 ">
        <%= form.label :valid %><br>
        <%= form.text_field :is_valid,class: "form-control" %>
      </div>

      <div class="row">
      <div  class="form-group col-md-1 offset-md-1">
        <%= link_to 'Back', tokens_path,class:"btn btn-danger" %>
      </div>
    <% end %>

    <div  class="form-group col-md-1 offset-md-7">
      <%= form.submit class:"btn btn-primary" %>
    </div>
  </div>


<% end %>